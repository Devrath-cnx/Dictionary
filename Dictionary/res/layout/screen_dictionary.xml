<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dictionary_background_color"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/rootId">


    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="633dp"
        android:orientation="vertical"
        android:layout_margin="13dp"
        android:gravity="center|top">


        <include
            android:id="@+id/headerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_dictionary_header"/>


        <include
            android:id="@+id/listContainerId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/include_list_container"
            android:visibility="visible"/>

        <include
            android:id="@+id/listNoDataContainerId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/include_no_search_data"
            android:visibility="gone"/>


    </LinearLayout>

</LinearLayout>
